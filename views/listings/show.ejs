<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">

 
        <h3>Listing Details :</h3>
           
        <div class="card col-6 offset-3 show-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing image">
            <div class="card-body">
            <p class="card-text"> 
                <b><%= listing.title %></b> <br>
                <b><%= listing.description %></b> <br>
                <b> &#8377;
                <%= listing.price != null ? listing.price.toLocaleString("en-IN") : "N/A" %>
                </b> <br>

                <b><%= listing.location %></b> <br>
                <b><%= listing.country %></b> <br>

            </p>
        </div>
        </div>
        

        <br />

        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" 
                class="btn btn-dark col-1  offset-1 edit-btn">Edit </a>

            <form method="POST"
             action="/listings/<%= listing._id %>?_method=DELETE" 
                class="btn btn-dark  offset-2">
            <button>Delete</button>
        </form>
        </div>
</div>
</div>
    